<%- contentFor('breadcrumb') %>

<%- contentFor('body') %>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">

                <h4 class="card-title">Update Event </h4>
                <form id="myFormEvents" action="/events/update" method="POST">
                    <div class="row mb-3">
                        <label for="example-text-input" class="col-sm-2 col-form-label">Venue</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" id="venue" name="txtvenue" value=<%= data.venue %> >
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label for="example-text-input" class="col-sm-2 col-form-label">Title</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" id="title" name="txttitle" required>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label for="example-text-input" class="col-sm-2 col-form-label">Description</label>
                        <div class="col-sm-10"><textarea class="form-control" id="description" rows="3" name="txtdesc" required> </textarea>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label for="example-date-input" class="col-sm-2 col-form-label">Date</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="date" placeholder="2022-08-19" id="example-date-input" name="txtdate" required>
                        </div>
                    </div>


                    <div class="row mb-3">
                        <label for="example-time-input" class="col-sm-2 col-form-label">Time</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="time" placeholder="13:45:00" id="example-time-input" name="txttime" required>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label for="example-time-input" class="col-sm-2 col-form-label">&nbsp;</label>
                        <div class="col-sm-10">
                         <button type="button" class="btn btn-primary waves-effect waves-light" id="eventsbtn"> Update Event</button>
                         <a href="/events"><button type="button" class="btn btn-danger waves-effect waves-light" style="margin-left:10px;">Cancel</button></a>
                         </div>
                    </div>

                    <input class="form-control" type="hidden" id="example-text-input" name="txtadmin">


            </div>
        </div>
    </div> <!-- end col -->
</div> <!-- end row -->
</form>

