<!doctype html>
<html lang="en">

    <head>
    
        <meta charset="utf-8">
        <title>Login | NMSCST Online and Short Message Service Inquiry Chatbot</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <!-- App favicon -->
        <link rel="shortcut icon" href="public/assets/images/logo.png">
    
        <%- include ('../Partials/HeaderStyle') %>
    
    </head>

    <body>

        <!-- Loader -->
            <div id="preloader"><div id="status"><div class="spinner"></div></div></div>

         <!-- Begin page -->
         <div class="accountbg" style="background: url('public/assets/images/bg.jpg');background-size: cover;background-position: center;"></div>

        <div class="account-pages mt-5 pt-5">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-8 col-lg-5 col-xl-4">
                        <div class="card">
                            <div class="card-body">
                                <div class="text-center mt-4">
                                    <div class="mb-3">
                                        <a href="/"><img src="public/assets/images/logo.png" height="80" alt="logo"></a>
                                    </div>
                                </div>
                                <div class="p-1">
                                    <h5 class="font-size-18 mt-2 text-center">NMSCST Online and Short Message Service Inquiry Chatbot</h5>
                                   
                                    <% if(error.length> 0) { %>
                                        <div class="alert alert-danger text-center mb-4 flash" role="alert">
                                            <%= error %>
                                        </div>
                                    <% } %>
                                    <% if(message.length> 0) { %>
                                        <div class="alert alert-success text-center mb-4 flash" role="alert">
                                            <%= message %>
                                        </div>
                                    <% } %>
    
                                    <form class="form-horizontal" method="post" action="/post-login">
    
                                        <div class="mb-3">
                                            <label class="form-label" for="username">Email</label>
                                            <input type="text" class="form-control" id="username" name="email"
                                            placeholder="Enter email" >
                                        </div>
    
                                        <div class="mb-3">
                                            <label class="form-label" for="userpassword">Password</label>
                                            <input type="password" class="form-control" id="userpassword" placeholder="Enter password" name="password">
                                        </div>
    
                                        <div class="row mt-4">
                                            
                                            <div class="col-sm-12 text-end">
                                                <button class="btn btn-primary w-md waves-effect waves-light" type="submit">Log In</button>
                                            </div>
                                        </div>
    
                                        <div class="mb-0 row">
                                            <div class="col-12 mt-4">
                                                <a href="/forgot-password" class="text-muted"><i class="mdi mdi-lock"></i> Forgot your password?</a>
                                            </div>
                                        </div>
                                    </form>
    
                                </div>
    
                            </div>
                        </div>
                        <div class="mt-5 text-center position-relative">
                            
                            <p class="text-white"><script>document.write(new Date().getFullYear())</script> Â© NMSCST Online and Short Message Service Inquiry Chatbot.</p>
                        </div>
    
                    </div>
                </div>
            </div>
        </div>

        <%- include ('../Partials/VendorScript') %>

        <script src="public/assets/js/app.js"></script>

    </body>
</html>
