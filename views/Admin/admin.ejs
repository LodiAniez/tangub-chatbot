<%- contentFor('breadcrumb') %>

<%- contentFor('body') %>

<div class="row">
        <div class="col-12">
        <div class="card">
            <div class="card-body">

                <h4 class="card-title">List of Admin</h4><br>


                <!---- --->

                <table id="datatable" class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">

                    <thead>
                    <tr>

                        <th>No</th>
                        <th>Firstname</th>
                        <th>Lastname</th>
                        <th>Department</th>
                        <th>Email</th>
                        <th>Contact Number</th>
                        <th>Action</th>

                    </tr>
                    </thead>


                    <tbody>
                    <%
                    if(userData.length != 0){
                        var i = 1;
                    userData.forEach(function(data){
                    %>
                    <tr>                      
                       <td><%= data.admin_id %></td>
                       <td><%= data.firstname %></td>
                       <td><%= data.lastname%></td>
                       <td><%= data.department%></td>
                       <td><%= data.email %></td>
                       <td><%= data.contactnumber %></td>
   
                         <td> <button type="button" class="btn btn-danger waves-effect waves-light" id="deleteadmin">Delete</button></td>                    

                    </tr>
                    <script type="application/javascript">

                        document.getElementById("deleteadmin<%= data.admin_id %>").onclick = function () {
                            /* do something */
                            Swal.fire({
                                title: "Are you sure?",
                                text: "You won't be able to revert this!",
                                icon: "warning",
                                showCancelButton: true,
                                confirmButtonColor: "#4ac18e",
                                cancelButtonColor: "#f46a6a",
                                confirmButtonText: "Yes, delete it!"
                            }).then(function (result) {
                                if (result.value) {
                                    Swal.fire("Deleted!", "Your record has been deleted.", "success");
                                    window.location.href = '/admin';
                                }
                            });

                        };


                    </script>
                    <% i++; }) %>
                    <% } else{ %>
                        <tr>
                            <td colspan="7">No Admin Found</td>
                        </tr>
                    <% } %>
                    </tbody>
                </table>

                <!---- --->
            </div>
        </div>
    </div>
</div>
